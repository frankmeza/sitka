{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["ES2018", "dom"],
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": false,
        "target": "es5",
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
}